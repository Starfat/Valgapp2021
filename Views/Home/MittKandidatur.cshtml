    <label for="BrukerId">BrukerId: </label> <br />
    <input type="text" asp-for="BrukerId" name="brukerId" value="3b438308-8055-411f-b031-086e26395797" /><br />
    <label for="sjekkboks">Huk av om du ønsker å være kandidat og lagre:</label><br />
    <input type="checkbox" asp-for="Sjekkboks" name="sjekkboks" value="sjekkboks" id="sjekkboks" /><br />
    <input type="submit" name="Lagre" value="Lagre" />
    <hr />

</form>
