@model Valgapplikasjon.Models.MittKandidaturModel
@{
    Layout = "_Layout";
}
<p>Her kan du velge om du ønsker å stille som kandidat til valget. Huk av på boksen hvis du ønsker å være kandidat.</p>

<form asp-action="MittKandidatur" method="post" asp-controller="Home">

    <label for="KandidatId">KandidatId: </label><br />
