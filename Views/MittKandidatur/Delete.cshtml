@model Valgapplikasjon.Models.MittKandidaturModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Slett</h1>

<h3>Er du sikker på at du vil slette ditt kandidatur?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BrukerId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BrukerId)
        </dd>
        <dt class="col-sm-2">
           Kandidat
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sjekkboks)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="KandidatId" />
        <input type="submit" value="Slett" class="btn btn-danger" /> |
        <a asp-action="Index">Tilbake til oversikt</a>
    </form>
</div>
