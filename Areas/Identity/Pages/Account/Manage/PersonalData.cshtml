@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personlig data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

        <p>Kontoen din inneholder personlig data du har gitt oss. Her kan du laste ned eller slette data som er lagret om deg.</p>
        <p>
            <strong> Sletting av data vil fjerne kontoen din permanent. Denne handlingen kan ikke angres.</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            <button id="last-ned-button" class="btn btn-primary" type="submit">Last ned</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-secondary">Slett</a>
        </p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
