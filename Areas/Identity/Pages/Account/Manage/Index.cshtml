@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<form id="profile-form" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" disabled />
    </div>
    <label asp-for="Input.PhoneNumber"></label>
    <input asp-for="Input.PhoneNumber" class="form-control" /><br />
    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
    <div class="form-group">
        <label asp-for="Input.Fornavn"></label>
        <input asp-for="Input.Fornavn" class="form-control" />
        <span asp-validation-for="Input.Fornavn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Etternavn"></label>
        <input asp-for="Input.Etternavn" class="form-control" />
        <span asp-validation-for="Input.Etternavn" class="text-danger"></span>
    </div>
    <button id="update-profile-button" type="submit" class="btn btn-primary">Lagre</button>

    <div class="col-md-6">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Profilbilde" style="width: 100%;"></label>
            @if (Model.Input.Profilbilde != null)
            {
                <img id="profilbilde" style="width:350px;height:350px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.Profilbilde))">
            }
            else
            {
                <img id="profilbilde" style="width:350px;height:350px; object-fit:cover" src="">
            }
            <input type="file"
                   accept=".png,.jpg,.jpeg,.gif,.tif"
                   asp-for="Input.Profilbilde"
                   class="form-control"
                   style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                   onchange="document.getElementById('profilbilde').src = window.URL.createObjectURL(this.files[0])" />
            <span asp-validation-for="Input.Profilbilde" class="text-danger"></span>
        </div>
        </div>
</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}